<?phpfunction cekGET($Var="",$Isi="") { 	global $HTTP_GET_VARS; $Hsl = isset($HTTP_GET_VARS["$Var"]) ? $HTTP_GET_VARS["$Var"] : $Isi; 	return $Hsl; } function cekPOST($Var="",$Isi="") { 	global $HTTP_POST_VARS; 	$Hsl = isset($HTTP_POST_VARS["$Var"]) ? $HTTP_POST_VARS["$Var"] : $Isi; 	return $Hsl; } function cekPOSTCOOKIE($Var="",$Var1="",$Isi="") { 	global $HTTP_POST_VARS,$HTTP_COOKIE_VARS; 	if(isset($HTTP_POST_VARS["$Var"])) { 		$Hsl = $HTTP_POST_VARS["$Var"]; 	} elseif(isset($HTTP_COOKIE_VARS["$Var1"])) { 		$Hsl = $HTTP_COOKIE_VARS["$Var1"]; $Var1; 	} else { 		$Hsl = ""; 	} 	return $Hsl; } function cekPOSTCOOKIE2($Var="",$Var1="",$Isi="") { 	global $HTTP_POST_VARS,$HTTP_COOKIE_VARS; 			if(isset($HTTP_POST_VARS["$Var"])) { //jika diset dari param		setcookie($Var,$HTTP_POST_VARS["$Var"]);		$Hsl = $HTTP_POST_VARS["$Var"]; 			} elseif(isset($HTTP_COOKIE_VARS["$Var"])) { //jika tidak, ambil di cookie		$Hsl = $HTTP_COOKIE_VARS["$Var"]; //$Var1; 	} else { 		setcookie($Var,$Isi);		$Hsl = $Isi; 	} 	return $Hsl; } function ambilPOST() { 	global $HTTP_POST_VARS; 	foreach($HTTP_POST_VARS as $key=>$value) { 		global $$key; $a = $value; 	} } function TglInd($Tgl="") { 	$Tanggal = !empty($Tgl)?substr($Tgl,8,2)."-".substr($Tgl,5,2)."-".substr($Tgl,0,4):""; 	if ($Tanggal == '00-00-0000'){		$Tanggal = '';	}	return $Tanggal; } 	function TglJamInd($Tgl="") { 	$Tanggal = !empty($Tgl)?substr($Tgl,8,2)."-".substr($Tgl,5,2)."-".substr($Tgl,0,4)." ".substr($Tgl,11,8) :""; 	return $Tanggal; } function TglSQL($Tgl="") { 	$Tanggal = !empty($Tgl)?substr($Tgl,6,4)."-".substr($Tgl,3,2)."-".substr($Tgl,0,2):""; 	return $Tanggal; } function TglJamSQL($Tgl="") { 	$Tanggal = !empty($Tgl)?substr($Tgl,6,4)."-".substr($Tgl,3,2)."-".substr($Tgl,0,2)." ".substr($Tgl,11,8) : ""; 	return $Tanggal; }function JuyTgl1($tgl="") { 	global $Ref; 	if(!empty($tgl) and substr($tgl,0,4)!="0000") { 		$cHr = @$Ref->NamaHari[date("w",mktime(0,